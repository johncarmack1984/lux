{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "app": {
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/tray.png",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "acceptFirstMouse": true,
        "additionalBrowserArgs": null,
        "alwaysOnTop": false,
        "center": false,
        "closable": true,
        "contentProtected": false,
        "fileDropEnabled": false,
        "focus": false,
        "hiddenTitle": false,
        "label": "main",
        "maximizable": true,
        "maxHeight": null,
        "maximized": false,
        "maxWidth": null,
        "minHeight": 0,
        "minimizable": true,
        "minWidth": 0,
        "skipTaskbar": false,
        "tabbingIdentifier": "main",
        "titleBarStyle": "Overlay",
        "fullscreen": false,
        "resizable": true,
        "title": "ðŸ’¡lux",
        "visible": true,
        "decorations": true,
        "transparent": true,
        "x": 1280,
        "y": 1095,
        "width": 1280,
        "height": 1070
      }
    ],
    "withGlobalTauri": false
  },
  "build": {
    "beforeBuildCommand": "bun run build",
    "beforeDevCommand": "bun dev",
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000"
  },
  "bundle": {
    "active": true,
    "category": "DeveloperTool",
    "copyright": "",
    "targets": "all",
    "externalBin": [],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "longDescription": "",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "resources": [],
    "shortDescription": "",
    "linux": {
      "deb": {
        "depends": []
      }
    }
  },
  "identifier": "com.lux.dev",
  "plugins": {
    "cli": {
      "description": "Lux CLI",
      "args": [
        { "short": "v", "name": "verbose", "description": "Verbositoy level" }
      ],
      "subcommands": {
        "dev": {
          "description": "Start the development server",
          "args": []
        },
        "build": {
          "description": "Build the app",
          "args": []
        },
        "run": {
          "description": "Run the application",
          "args": [
            {
              "name": "debug",
              "description": "Run application in debug mode"
            },
            {
              "name": "release",
              "description": "Run application in release mode"
            }
          ]
        }
      }
    },
    "http": {},
    "log": {
      "level": "debug"
    }
  },
  "productName": "lux",
  "version": "0.1.0"
}
