{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "lux",
  "version": "0.1.0",
  "identifier": "com.johncarmack.lux",
  "build": {
    "beforeBuildCommand": "bun run build",
    "beforeDevCommand": "bun run dev",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "ðŸ’¡lux",
        "x": 0,
        "y": 0,
        "width": 960,
        "height": 1035,
        "acceptFirstMouse": true,
        "titleBarStyle": "Transparent"
      }
    ],
    "security": {
      "csp": null,
      "pattern": {
        "use": "isolation",
        "options": {
          "dir": "../dist-isolation/"
        }
      }
    },
    "trayIcon": {
      "iconPath": "icons/tray.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
