{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "bun run build",
    "beforeDevCommand": "bun dev",
    "devPath": "http://localhost:3000",
    "distDir": "../out"
  },
  "package": {
    "productName": "lux",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.lux.dev",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "systemTray": {
      "iconPath": "icons/tray.png",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "acceptFirstMouse": true,
        "additionalBrowserArgs": null,
        "alwaysOnTop": false,
        "center": false,
        "closable": true,
        "contentProtected": false,
        "fileDropEnabled": false,
        "focus": false,
        "hiddenTitle": false,
        "label": "main",
        "maximizable": true,
        "maxHeight": null,
        "maximized": false,
        "maxWidth": null,
        "minHeight": 0,
        "minimizable": true,
        "minWidth": 0,
        "skipTaskbar": false,
        "tabbingIdentifier": "main",
        "titleBarStyle": "Visible",
        "fullscreen": false,
        "resizable": true,
        "title": "lux",
        "visible": true,
        "decorations": true,
        "transparent": true,
        "x": 0,
        "y": 0,
        "width": 1028,
        "height": 645
      }
    ]
  }
}
