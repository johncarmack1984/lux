{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "lux",
  "app": {
    "macOSPrivateApi": true,
    "security": {
      "pattern": {
        "use": "isolation",
        "options": {
          "dir": "../isolation-dist/"
        }
      },
      "csp": {
        "default-src": "'self' customprotocol: asset:",
        "connect-src": "ipc: http://ipc.localhost",
        "font-src": ["https://fonts.gstatic.com"],
        "img-src": "'self' asset: http://asset.localhost blob: data:",
        "style-src": "'unsafe-inline' 'self' https://fonts.googleapis.com"
      }
    },
    "trayIcon": {
      "iconPath": "icons/tray.png",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "acceptFirstMouse": true,
        "additionalBrowserArgs": null,
        "alwaysOnTop": false,
        "center": false,
        "closable": true,
        "contentProtected": false,
        "fileDropEnabled": false,
        "focus": false,
        "hiddenTitle": false,
        "label": "main",
        "maximizable": true,
        "maxHeight": null,
        "maximized": false,
        "maxWidth": null,
        "minHeight": 0,
        "minimizable": true,
        "minWidth": 0,
        "skipTaskbar": false,
        "tabbingIdentifier": "main",
        "titleBarStyle": "Overlay",
        "fullscreen": false,
        "resizable": true,
        "title": "ðŸ’¡lux",
        "visible": true,
        "decorations": true,
        "transparent": true,
        "x": 0,
        "y": 0,
        "width": 1280,
        "height": 1065
      }
    ],
    "withGlobalTauri": false
  },
  "build": {
    "beforeBuildCommand": "bun run build",
    "beforeDevCommand": "bun run dev",
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000"
  },
  "bundle": {
    "active": true,
    "android": {
      "minSdkVersion": 24
    },
    "category": "DeveloperTool",
    "copyright": "",
    "targets": "all",
    "externalBin": [],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "allowDowngrades": true,
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "longDescription": "",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null,
      "files": {},
      "minimumSystemVersion": "10.13"
    },
    "iOS": {
      "developmentTeam": null
    },
    "resources": [],
    "shortDescription": "",

    "linux": {
      "deb": {
        "depends": []
      }
    }
  },
  "identifier": "com.lux.dev",
  "plugins": {
    "cli": {
      "description": "Lux CLI",
      "args": [
        { "short": "v", "name": "verbose", "description": "Verbosity level" }
      ],
      "subcommands": {
        "dev": {
          "description": "Start the development server",
          "args": []
        },
        "build": {
          "description": "Build the app",
          "args": []
        },
        "run": {
          "description": "Run the application",
          "args": [
            {
              "name": "debug",
              "description": "Run application in debug mode"
            },
            {
              "name": "release",
              "description": "Run application in release mode"
            }
          ]
        }
      }
    }
  },
  "version": "0.1.0"
}
