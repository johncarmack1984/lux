{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "lux",
  "version": "0.1.0",
  "identifier": "com.johncarmack.lux",
  "build": {
    "beforeBuildCommand": "bun run build",
    "beforeDevCommand": "bun run dev",
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "ðŸ’¡lux",
        "x": 0,
        "y": 0,
        "width": 960,
        "height": 1020,
        "acceptFirstMouse": true,
        "titleBarStyle": "Transparent"
      }
    ],
    "security": {
      "csp": null,
      "pattern": {
        "use": "isolation",
        "options": {
          "dir": "../out-isolation/"
        }
      }
    },
    "trayIcon": {
      "iconPath": "icons/tray.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null,
      "files": {},
      "minimumSystemVersion": "10.13"
    },
    "iOS": {
      "developmentTeam": null
    },
    "linux": {
      "deb": {
        "depends": []
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "cli": {
      "description": "Lux CLI",
      "args": [
        { "short": "v", "name": "verbose", "description": "Verbosity level" }
      ],
      "subcommands": {
        "dev": {
          "description": "Start the development server",
          "args": []
        },
        "build": {
          "description": "Build the app",
          "args": []
        },
        "run": {
          "description": "Run the application",
          "args": [
            {
              "name": "debug",
              "description": "Run application in debug mode"
            },
            {
              "name": "release",
              "description": "Run application in release mode"
            }
          ]
        }
      }
    }
  }
}
